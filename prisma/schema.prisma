// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  phone  String?
  dateOfbirth  DateTime?
  sex String?
  adress String?
  introduce String?
  posts Post[]
  comment Comment[]
  createAt DateTime
  password String
  emoji Emoji[]
  follow  Follow[]

}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  content   String?
  image     String?
  video     String?
  tags      String[]
  user    User    @relation(fields: [userId], references: [id])
  userId  Int @map("authorId")
  comment Comment[]
  createAt DateTime
  emoji Emoji[]
  follow Follow[]
}

model Emoji {
  id        Int      @default(autoincrement()) @id
  emoji   String
  user    User    @relation(fields: [userId], references: [id])
  userId  Int @map("authorId")
  createAt DateTime
  postId    Int
  post    Post  @relation(fields: [postId], references: [id])
}

model Comment {
  id        Int      @default(autoincrement()) @id
  content   String?
  userId  Int @map("authorId")
  user      User    @relation(fields: [userId], references: [id])
  postId    Int
  post      Post   @relation(fields: [postId], references: [id])
  referenceId Int?
  reference   Comment?   @relation("Original", fields: [referenceId], references: [id])
  original Comment?   @relation("Original")
  createAt DateTime
}

model Follow {
   id        Int      @default(autoincrement()) @id
  userId  Int
  user      User    @relation(fields: [userId], references: [id])
  postId  Int
  post      Post    @relation(fields: [postId], references: [id])
}